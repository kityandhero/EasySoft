<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DocumentationFile>bin\Debug\WebApplicationTest.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>bin\Release\WebApplicationTest.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Asp.Versioning.Mvc.ApiExplorer" Version="6.0.0"/>
        <PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.1.0"/>
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0"/>
    </ItemGroup>
    
    <ItemGroup>
        <ProjectReference Include="..\..\infrastructure\EasySoft.Core.DevelopAuxiliary\EasySoft.Core.DevelopAuxiliary.csproj" />
        <ProjectReference Include="..\..\infrastructure\EasySoft.Core.EasyToken\EasySoft.Core.EasyToken.csproj" />
        <ProjectReference Include="..\..\infrastructure\EasySoft.Core.HealthChecks\EasySoft.Core.HealthChecks.csproj" />
        <ProjectReference Include="..\..\infrastructure\EasySoft.Core.LogDashboard\EasySoft.Core.LogDashboard.csproj" />
        <ProjectReference Include="..\..\infrastructure\EasySoft.Core.Mapster\EasySoft.Core.Mapster.csproj" />
        <ProjectReference Include="..\AutoFacTest\AutoFacTest.csproj" />
        <ProjectReference Include="..\EasySoft.Simple.EntityFrameworkCore\EasySoft.Simple.EntityFrameworkCore.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Areas\AreaTest" />
        <Folder Include="wwwroot1" />
        <Folder Include="wwwroot\lib" />
    </ItemGroup>

    <ItemGroup>
      <None Include="configures\redisConfig.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
        <Content Update="configures\databaseConfig.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="configures\rabbitMQConfig.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="configures\swaggerConfig.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

</Project>
