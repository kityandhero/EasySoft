@* @model TModel *@

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="zh">
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="MvcTest" asp-action="Index">Movie App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="MvcTest" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="MvcTest" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

@* <div> *@
@*     @await RenderSectionAsync("Privacy") *@
@* </div> *@

<footer class="border-top footer text-muted">


    <div class="container">
        &copy; 2021 - Movie App - <a asp-controller="MvcTest" asp-action="Privacy">Privacy</a>
    </div>
</footer>

@* <script src="~/lib/jquery/dist/jquery.js"></script> *@
